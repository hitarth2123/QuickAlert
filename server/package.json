{
  "name": "quickalert-server",
  "version": "1.0.0",
  "description": "QuickAlert Backend API - Emergency Alert and Reporting System",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles --forceExit",
    "test:auth": "jest tests/auth.test.js --detectOpenHandles --forceExit",
    "test:reports": "jest tests/reports.test.js --detectOpenHandles --forceExit",
    "test:alerts": "jest tests/alerts.test.js --detectOpenHandles --forceExit",
    "test:analytics": "jest tests/analytics.test.js --detectOpenHandles --forceExit",
    "test:middleware": "jest tests/middleware.test.js --detectOpenHandles --forceExit",
    "test:models": "jest tests/models.test.js --detectOpenHandles --forceExit",
    "test:utils": "jest tests/utils.test.js --detectOpenHandles --forceExit",
    "test:sockets": "jest tests/sockets.test.js --detectOpenHandles --forceExit"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "verbose": true,
    "testTimeout": 30000,
    "collectCoverageFrom": [
      "routes/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "utils/**/*.js",
      "sockets/**/*.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "emergency",
    "alert",
    "reporting",
    "api"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cloudinary": "^2.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "firebase-admin": "^13.6.0",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.3",
    "multer": "^1.4.5-lts.1",
    "multer-storage-cloudinary": "^2.2.1",
    "nodemailer": "^7.0.11",
    "socket.io": "^4.7.2",
    "uploadthing": "^7.7.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.0.2",
    "socket.io-client": "^4.8.1",
    "supertest": "^7.1.4"
  }
}
